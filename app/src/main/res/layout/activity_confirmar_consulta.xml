<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context="com.maishealth.maishealth.usuario.gui.ConfirmarConsulta">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/materialup.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButoes"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/materialup.toolbar"
            style="@style/ToolBarWithNavigationBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/label_confirmar_consulta"
            app:titleTextColor="@color/colorFundo"/>

    </android.support.design.widget.AppBarLayout>


    <ImageView
        android:id="@+id/buttonConfCons"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEndPostoMarc"
        app:layout_constraintVertical_bias="0.692"
        app:srcCompat="@mipmap/ic_launcher_ok" />

    <ImageView
        android:id="@+id/buttonCancCons"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEndPostoMarc"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/textViewDiaCons"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="16dp"
        android:text="@string/text_view_dia_marc_cons"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialup.appbar" />

        <TextView
            android:id="@+id/textDiaMarc"
            android:layout_width="241dp"
            android:layout_height="32dp"
            android:text="@string/text_dia_marc_cons"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewDiaCons"
            app:layout_constraintStart_toStartOf="@+id/textViewDiaCons"
            app:layout_constraintTop_toBottomOf="@+id/textViewDiaCons"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="43dp" />

        <TextView
            android:id="@+id/textViewNomeMed"
            android:layout_width="137dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:text="@string/text_view_nome_med_cons"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textDiaMarc"
            app:layout_constraintStart_toStartOf="@+id/textDiaMarc"
            app:layout_constraintTop_toBottomOf="@+id/textDiaMarc" />

    <TextView
        android:id="@+id/textNomeMedMarc"
        android:layout_width="236dp"
        android:layout_height="49dp"
        android:text="@string/text_nome_med_cons"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNomeMed"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeMed"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeMed" />

        <TextView
            android:id="@+id/textViewEspCons"
            android:layout_width="137dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:text="@string/text_view_espec_med_cons"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textNomeMedMarc"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/textNomeMedMarc"
            app:layout_constraintTop_toBottomOf="@+id/textNomeMedMarc" />

        <TextView
            android:id="@+id/textViewPostoCons"
            android:layout_width="137dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:text="@string/text_view_posto_saude"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textEspecMedMarc"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/textEspecMedMarc"
            app:layout_constraintTop_toBottomOf="@+id/textEspecMedMarc" />

    <TextView
        android:id="@+id/textPostoMarc"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:text="@string/text_posto_cons"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewPostoCons"
        app:layout_constraintStart_toStartOf="@+id/textViewPostoCons"
        app:layout_constraintTop_toBottomOf="@+id/textViewPostoCons" />

        <TextView
            android:id="@+id/textViewEndCons"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:text="@string/text_view_end_cons"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textPostoMarc"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/textPostoMarc"
            app:layout_constraintTop_toBottomOf="@+id/textPostoMarc" />

        <TextView
            android:id="@+id/textEndPostoMarc"
            android:layout_width="229dp"
            android:layout_height="72dp"
            android:text="@string/text_end_posto_cons"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewEndCons"
            app:layout_constraintStart_toStartOf="@+id/textViewEndCons"
            app:layout_constraintTop_toBottomOf="@+id/textViewEndCons"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textEspecMedMarc"
        android:layout_width="233dp"
        android:layout_height="44dp"
        android:text="@string/texto_esp_med_cons"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewEspCons"
        app:layout_constraintStart_toStartOf="@+id/textViewEspCons"
        app:layout_constraintTop_toBottomOf="@+id/textViewEspCons" />



</android.support.constraint.ConstraintLayout>
